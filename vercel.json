{
    "version": 2,
    "builds": [
        {
            "src": "src/index.js",
            "use": "@vercel/node"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' 'unsafe-inline';"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/index.js"
        }
    ]
}